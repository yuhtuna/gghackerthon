{
  "manifest_version": 3,
  "name": "WebNano",
  "version": "0.1.0",
  "description": "Your intelligent web assistant. Find, analyze, and interact with any webpage.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "commands": {
    "open-webnano-assistant": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Open WebNano Assistant"
    }
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "WebNano Assistant"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}

